# Twitch API Credentials
TWITCH_OAUTH_TOKEN=oauth:your_token_here
TWITCH_CLIENT_ID=your_client_id_here

# Storage Configuration
# Options: 'file' (local) or 's3' (AWS)
STORAGE_TYPE=file

# AWS S3 Configuration (only needed if STORAGE_TYPE=s3)
S3_BUCKET=vieweratlas-data-lake
S3_PREFIX=vieweratlas/
S3_REGION=us-east-1

# AWS Credentials (only needed if STORAGE_TYPE=s3)
# Option 1: IAM role (recommended for ECS/EC2) - leave these empty
# Option 2: Access keys (for local testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Logging
LOG_LEVEL=INFO
